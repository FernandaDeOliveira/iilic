@model iilic.Core.Login

<script type="text/javascript">
   $(function(){
      $(".close").click(function(){
         $("#myAlert").alert('close');
      });
   });
</script> 
<div class="container" >
    <!--  <div class="col-md-6">
      <div class="configdiv">
          <img src="~/Imagem/imag3.jpg" class="img-responsive img-rounded " alt="" />
      </div>-->
    <!--  <div class="col-lg-6" style="background-color:#A9D0F5">-->
   
    <div style="padding-top:120px" >
        
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 ">
            <div class="login-panel panel panel-primary">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    @if (@ViewBag.errouLogin != null)
                    {
                    <div id="myAlert" class="alert alert-warning alert-dismissible fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h3>@ViewBag.errouLogin</h3>
                    </div>
                    }
                    <form action="Autentica" method="post">
                      
                      
                        <fieldset>
                            <div class="form-group">
                                <div class="form-group">
                             
                                    <il>
                                        <label><input type="radio" name="valorLog" checked="true" value="1">Administrador</label>
                                        <label><input type="radio" name="valorLog" value="2">Terapeuta</label>
                                    </il>
                                </div>
                                <div class="col-md-20">
                                    <input placeholder="Digite sua credencial" name="login" class="form-control input-md" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-20">
                                    <input placeholder="Digite sua senha" name="senha" class="form-control input-md" type="password">
                                </div>
                            </div>
                            <div class="form-group">
                                <div style="padding-left:250px">
                                    <button type="submit" class="btn btn-primary btn-lg" aria-label="Entrar">
                                        <span class="glyphicon glyphicon-ok-sign"></span>
                                    </button>
                                </div>
                            </div>
                        </fieldset>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>