@model IEnumerable<iilic.Core.Terapeuta>
@{
    ViewBag.Title = "IndexTer";
}

<div class="container-fluid">
<div class="row">
    <button class="btn btn-success btn-lg">
        <span class="glyphicon glyphicon-plus-sign"></span>
    </button>

<div class="form-inline " >
    <div class="col-xs-4">
        <input class="form-control" type="text" name="pesquisa" placeholder="Pesquisar terapeuta" />  <button class="btn btn-info btn-lg">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </div>
</div>
    </div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="glyphicon glyphicon-th-list"></i> Terapeutas</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <tr>
                        <th>Nome da Instituição</th>
                        <th>Telefone</th>
                        <th>Atividade a Desempenhar</th>
                        <th>Ação</th>
                    </tr>
                    @foreach (var terapeuta in Model)
                    {
                        <tr>
                            <td>@terapeuta.nomeMed</td>
                            <td>@terapeuta.telefone</td>
                            <td>@terapeuta.email</td>
                            <td>@terapeuta.crmM</td>
                          <!--  <td><a class="btn btn-success" href="~/Voluntario/Ler/@item.idMensagem">Ler</a></td>
                            <td><a class="btn btn-info" href="~/Voluntario/Escrevermensagem/@item.empresa.idEmpresa">Responder</a></td>
                            <td><a class="btn btn-danger" href="~/Voluntario/DeletarMsgE/@item.idMensagem">Deletar</a></td>-->
                        </tr>
                    }
                    
                </table>
            </div>
        </div>
    </div>
</div>

</div>