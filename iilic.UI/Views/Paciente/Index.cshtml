@model IEnumerable<iilic.Core.Paciente>

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Página inicial</a></li>
            <li class="active">Pacientes</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-xs-4">
                                    <a class="btn btn-success btn-sm-4" href="~/Paciente/CriarPaciente" aria-label="Adicionar">
                                        <span class="glyphicon glyphicon-plus-sign"></span>
                                    </a>
                                </div>


                                <div class="form-inline">
                                    <div class="form-group col-xs-4">

                                        <form action="~/Paciente/Pesquisar" method="post">
                                            <input class="form-control" type="text" name="pesquisa" id="pesquisa" placeholder="Pesquisar paciente" />
                                            <button class="btn btn-primary btn-sm-4" name="pesquisa" type="submit">
                                                <span class="glyphicon glyphicon-search"></span>
                                            </button>
                                        </form>

                                    </div>
                                </div>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"><i class="glyphicon glyphicon-th-list"></i> Paciente</h3>
                                        </div>
                                        <div class="panel-body">
                                            <table class="table table-hover">
                                                <tr>
                                                    <th>Nome </th>
                                                    <th>Telefone</th>
                                                    <th>Email</th>
                                                    <th>CPF</th>
                                                    <th>Data de nascimento</th>
                                                    <th>Ações</th>
                                                    <th></th>
                                                </tr>
                                                @foreach (var paciente in Model)
                                                {
                                                    <tr>
                                                        <td>@paciente.nomePaciente</td>
                                                        <td>@paciente.telefone</td>
                                                        <td>@paciente.email</td>
                                                        <td>@paciente.cpfPac</td>
                                                        <td>@paciente.dataNascPac.ToShortDateString()</td>
                                                        <td>
                                                            <a href="~/Paciente/Editar/@paciente.codPaciente" class="btn btn-warning btn-md">
                                                                Editar <span class="glyphicon glyphicon-edit"></span>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Mudando essa area muda o conteudo do site -->
                          
                            <!-- Mudando essa area muda o conteudo do site -->
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </section>
</div>


