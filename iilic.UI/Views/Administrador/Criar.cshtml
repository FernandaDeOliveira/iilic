@model iilic.Core.Administrador

@{
    ViewBag.Title = "Criar";
}


    <form action="~/Administrador/Criar" method="Post">
        <div class="form-group">
        <div class="container-fluid">
            

            <div class="col-lg-12">
                <h2>Seus dados</h2>

                <h5>
                    @TempData["idLogin"]
                </h5>
            </div>
            <div class="form-group ">
                <label>Nome *</label>
                <input class="form-control" type="text" name="nomeAdmin">
            </div>

            <div class="form-group  col-lg-4">
                <label>CPF  *</label>
                <input class="form-control" type="text" name="cpf">
            </div>
            <div class="form-group  col-lg-4">
                <label>Data de nascimento *</label>
                <input class="form-control" type="date" name="dataNasc">
            </div>

            <div class="form-group  col-lg-4">
                <label>Sexo *</label>
                <div class="form-group">

                    <label><input type="radio" name="sexo" value="masculino">Masculino</label>
                    <label><input type="radio" name="sexo" value="feminino">Feminino</label>

                </div>
            </div>
            <div class="form-group  col-lg-4">
                <label>Telefone *</label>
                <input class="form-control" type="text" name="telefone">
            </div>

            <div class="form-group col-lg-4">
                <label> Email</label>
                <input class="form-control" type="text" name="email">
            </div>

            <div class="col-lg-4">

                <button class="btn btn-success form-group" type="submit">Cadastrar</button>
                <button class="btn btn-danger form-group" type="reset">Limpar</button>
            </div>
        </div>
            </div>
    </form>
   

