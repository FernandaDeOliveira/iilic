@model iilic.Core.Consulta
@{
    ViewBag.Title = "CriarConsulta";
}

<h2>CriarPaciente</h2>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> LOCAL</a></li>
            <li class="active">Editar consulta</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Mudando essa area muda o conteudo do site -->
                        <form action="~/Consulta/Editar" method="Post">
                            <div class="form-group">
                                <div class="container-fluid">
                                    <div class="col-lg-12">
                                        <h2>Dados da consulta</h2>
                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Dia da consulta *</label>
                                        <input class="form-control" type="date" name="dia" value="@Model.dia" required>
                                    </div>

                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Hora da consulta *</label>
                                        <input class="form-control" type="text" name="hora" value="@Model.hora" required>
                                    </div>
                                 
                                    <div class="form-group col-lg-12">
                                        <button class="btn btn-success form-group" type="submit">Cadastrar</button>
                                        <button class="btn btn-danger form-group" type="reset">Limpar</button>
                                    </div>
                                </div>
                            </div>
                        </form>


                        <!-- Mudando essa area muda o conteudo do site -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>




@{
    ViewBag.Title = "Editar";
}

