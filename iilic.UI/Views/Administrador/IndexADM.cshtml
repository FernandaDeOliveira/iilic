@model IEnumerable<iilic.Core.Consulta>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Administrador/IndexADM"><i class="fa fa-dashboard"></i> Index</a></li>

        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="container">
                        <div class="row ">

                            @foreach (var consulta in Model)
                            {
            <!-- Mudando essa area muda o conteudo do site -->



                                <div class="col-md-3">
                                    <div class="login panel panel-primary">
                                        <div class="panel-heading" style="font-size:medium">Consultas do dia</div>
                                        <div class="panel-body">
                                            <div class="form-group">


                                                <div class="form-group col-lg-12">
                                                    <label>Hora da consulta: @consulta.hora</label>

                                                </div>
                                                <div class="form-group col-lg-12">
                                                    <label>Nome do paciente: @consulta.paciente.nomePaciente</label>

                                                </div>
                                                <div class="form-group col-lg-12">
                                                    <label>Nome do terapeuta: @consulta.terapeuta.nomeMed</label>

                                                </div>
                                                <div>
                                                    <a href="~/Consulta/Editar/@consulta.idConsulta" class="btn btn-primary btn-md glyphicon glyphicon-pencil"></a>
                                                </div>



                                            </div>

                                        </div>

                                    </div>
                                </div>






                            }
                        </div>
                    </div>
                </div>

            </div>
    </section>
