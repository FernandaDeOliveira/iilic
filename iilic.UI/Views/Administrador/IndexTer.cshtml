@model IEnumerable<iilic.Core.Terapeuta>
@{
    ViewBag.Title = "IndexTer";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Administrador/IndexADM"><i class="fa fa-dashboard"></i> Página inicial</a></li>
            <li class="active">Lista de Terapeutas</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="container-fluid">
                            <div class="row">
                             
                                <div class="form-inline">
                                    <div class="form-group col-xs-4">
                                   
                                    <form action="~/Administrador/Pesquisar" method="post">
                                        <input class="form-control" type="text" name="pesquisa" id="pesquisa" placeholder="Pesquisar terapeuta" />
                                        <button class="btn btn-primary btn-md" name="pesquisa"  type="submit">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </form>
                                  
                                </div>
                            </div>


                          
                            <!-- Mudando essa area muda o conteudo do site -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"><i class="glyphicon glyphicon-th-list"></i> Terapeutas</h3>
                                        </div>
                                        <div class="panel-body">
                                            <table class="table table-hover">
                                                <tr>
                                                    <th>Nome </th>
                                                    <th>Telefone</th>
                                                    <th>Email</th>
                                                    <th>CRM</th>
                                                </tr>
                                                @foreach (var terapeuta in Model)
                                                {
                                                    <tr>
                                                        <td>@terapeuta.nomeMed</td>
                                                        <td>@terapeuta.telefone</td>
                                                        <td>@terapeuta.email</td>
                                                        <td>@terapeuta.crmM</td>

                                                    </tr>
                                                }

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Mudando essa area muda o conteudo do site -->
                        </div>
                </div>
            </div>
        </div>
    </section>
</div>


