@model IEnumerable<iilic.Core.Terapeuta>
@{
    ViewBag.Title = "IndexTer";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            NOME DO PROGRAMA
            <small>texto menor</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> LOCAL</a></li>
            <li class="active">NOME DA PAGINA QUE ESTA</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="container-fluid">
                            <div class="row">

                                <a class="btn btn-success btn-lg" href="~/Administrador/CriarTerapeuta" aria-label="Adicionar">
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                </a>


                                <div class="form-inline ">
                                    <div class="col-xs-4">
                                        <input class="form-control" type="text" name="pesquisa" placeholder="Pesquisar terapeuta" />
                                        <button class="btn btn-info btn-lg">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"><i class="glyphicon glyphicon-th-list"></i> Terapeutas</h3>
                                        </div>
                                        <div class="panel-body">
                                            <table class="table table-hover">
                                                <tr>
                                                    <th>Nome </th>
                                                    <th>Telefone</th>
                                                    <th>Email</th>
                                                    <th>CRM</th>
                                                </tr>
                                                @foreach (var terapeuta in Model)
                                                {
                                                    <tr>
                                                        <td>@terapeuta.nomeMed</td>
                                                        <td>@terapeuta.telefone</td>
                                                        <td>@terapeuta.email</td>
                                                        <td>@terapeuta.crmM</td>

                                                    </tr>
                                                }

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Mudando essa area muda o conteudo do site -->
                            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" class="img-responsive" alt="Generic placeholder thumbnail">
                            <h4>CONTEUDO DA PAGINA</h4>
                            <span class="text-muted">Something else</span>
                            <!-- Mudando essa area muda o conteudo do site -->
                        </div>
                </div>
            </div>
        </div>
    </section>
</div>


</div>