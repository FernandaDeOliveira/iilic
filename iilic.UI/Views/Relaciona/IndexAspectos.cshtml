@model IEnumerable<iilic.Core.CaracterisTica>

@{ 
    var idPaciente = ViewBag.codP;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <meta charset="utf-8" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <script src="~/scripts/jquery.js"></script>
    <script src="~/scripts/jquery-ui.js"></script>
</head>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Terapeuta/IndexTerapeuta"><i class="fa fa-dashboard"></i> Minhas Consultas</a></li>
            <li class="active">Aspectos do paciente</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Mudando essa area muda o conteudo do site -->
                        <div class="form-group">
                            <form action="~/Relaciona/Aspecto" method="post">
                                <!--tava Paciente.idPaciente-->
                                <button class="btn btn-success col-lg" name="idPaciente" value="@idPaciente" aria-label="Adicionar" type="submit">
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                </button>
                            </form>
                            </div>
                     
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title"><i class="glyphicon glyphicon-th-list"></i> Aspectos do paciente:<strong>@ViewBag.nomeP</strong></h3>
                                    </div>
                                    <div class="panel-body">



                                        @foreach (var c in Model)
                                        {
                                            <div class="panel-heading row"  >

                                                <div class="row">
                                                    <div class="col-lg-10 col-md-8 col-sm-8 col-xs-6">
                                                        <h4><b>@c.nomeCaracteristica</b></h4>
                                                    </div>

                                                    <div class="col-lg-2">
                                                        <a class="btn btn-warning" href="~/Relaciona/Editar/@c.idCarac" name="idCarac" >
                                                            <i class="glyphicon glyphicon-edit"></i>
                                                        </a>
                                                   
                                                        <a class="btn btn-danger" data-toggle="modal" data-target="#myModal" data-id="@c.idCarac">
                                                            <i class="glyphicon glyphicon-trash"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>

                                                <div class="modal fade" tabindex="-1" role="dialog" id="myModal" data-id="@c.idCarac">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header" style="background-color:coral">

                                                                <h4 class="modal-title">Atenção</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Você tem certeza que deseja excluir esse aspecto?</p>
                                                                <p><strong>@c.nomeCaracteristica    </strong></p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <div class="col-md-4">
                                                                    <form action="~/Relaciona/Excluir" method="post">
                                                                        <button class="btn btn-success " name="idCarac" value="@c.idCarac" type="submit">Sim</button>
                                                                    </form>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <button type="button" class="btn btn-danger " data-dismiss="modal">Não</button>
                                                                </div>

                                                            </div>
                                                        </div><!-- /.modal-content -->
                                                    </div><!-- /.modal-dialog -->
                                                </div><!-- /.modal -->
                                        }


                                    </div>
                                </div>
                                <!-- Mudando essa area muda o conteudo do site -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>








