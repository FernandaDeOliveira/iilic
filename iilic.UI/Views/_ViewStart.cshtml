@{
    
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    if (controller == "Administrador")
    {
        cLayout = "~/Views/Shared/_LayoutIndexADM.cshtml";
    }
     if (controller == "Terapeuta")
    {
        cLayout = "~/Views/Shared/_LayoutIndexTer.cshtml";
    }
    if (controller == "Login")
    {
        cLayout = "~/Views/Shared/_LayoutIndex.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }
   
    Layout = cLayout;
}