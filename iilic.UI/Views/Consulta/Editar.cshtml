
@model iilic.Core.Consulta

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Administrador/IndexADM"><i class="fa fa-dashboard"></i> Página inicial</a></li>
            <li class="active">Editar consulta</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        @if (@ViewBag.consulta != null)
            {
                            <div id="myAlert" class="alert alert-warning alert-dismissible fade in" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h3>@ViewBag.consulta</h3>
                            </div>
                        }
                        <!-- Mudando essa area muda o conteudo do site -->
                        <form action="Editar" method="Post">
                            <div class="form-group">
                                <div class="container-fluid">
                                    <div class="col-lg-12">
                                        <h2>Dados da consulta</h2>
                                    </div>
                                    <div class="col-lg-12">
                                        <input type="hidden" name="idConsulta" value="@Model.idConsulta" />
                                    </div>
                                    <div class="form-group col-lg-4">
                                        <label>Dia da consulta *</label>
                                        <input class="form-control" type="date" name="dia" value="@Model.dia.ToString("yyyy-MM-dd")" required>
                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Hora da consulta *</label>
                                        <input class="form-control" type="text" name="hora" value="@Model.hora" required>
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <label>Nome do paciente</label>

                                        <input class="form-control" type="text" name="nomePaciente" value="@Model.paciente.nomePaciente" readonly="readonly" required>                                      
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label>Nome do terapeuta responsável</label>

                                        <input class="form-control" type="text" name="nomeTerapeuta" value="@Model.terapeuta.nomeMed" readonly="readonly" required>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label>Selecione o terapeuta para alterar</label>
                                        <select class="form-control" name="terapeuta.numMed">
                                            @foreach (iilic.Core.Terapeuta item in ViewBag.terapeutas)
                                            {
                                                if (@Model.terapeuta.numMed == item.numMed)
                                                {
                                                    <option value="@item.numMed">@item.nomeMed</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.numMed">@item.nomeMed</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                   
                                    <div class="form-group  col-lg-12">
                                        <label>Efetuar pagamento? *</label>
                                        <div class="form-group">

                                            <label><input type="radio" name="statusPagamento" value="1" required>Sim</label>
                                            <label><input type="radio" name="statusPagamento" value="2" required>Não</label>

                                        </div>
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <button class="btn btn-success form-group" type="submit">Cadastrar</button>
                                        <button class="btn btn-danger form-group" type="reset">Limpar</button>
                                    </div>
                                </div>
                            </div>
                        </form>


                        <!-- Mudando essa area muda o conteudo do site -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



