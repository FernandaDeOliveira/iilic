@model iilic.Core.Consulta
@{
    ViewBag.Title = "CriarConsulta";
}

<h2>CriarPaciente</h2>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Iilic
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> LOCAL</a></li>
            <li class="active">Nova consulta</li>
        </ol>
    </section>
    <section class="content">

        <!-- Principal -->
        <div class="box box-solid">
            <div class="box-header">
                <div class="row">
                    <div class="col-lg-12">
                        @if (@ViewBag.consulta != null)
            {
                            <div id="myAlert" class="alert alert-warning alert-dismissible fade in" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h3>@ViewBag.consulta</h3>
                            </div>
                        }
                        <!-- Mudando essa area muda o conteudo do site -->
                        <form action="~/Consulta/CriarConsulta" method="Post">
                            <div class="form-group">
                                <div class="container-fluid">
                                    <div class="col-lg-12">
                                        <h2>Dados da consulta</h2>
                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Dia da consulta *</label>
                                        <input class="form-control" type="date" name="dia" required>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label>Selecione o paciente</label>
                                        <select class="form-control" name="paciente.codPaciente">
                                            @foreach (iilic.Core.Paciente item in ViewBag.pacientes)
                                            {
                                                <option value="@item.codPaciente">@item.nomePaciente</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label>Selecione o terapeuta</label>
                                        <select class="form-control" name="terapeuta.numMed">
                                            @foreach (iilic.Core.Terapeuta item in ViewBag.terapeutas)
                                            {
                                                <option value="@item.numMed">@item.nomeMed</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Hora da consulta *</label>
                                        <input class="form-control" type="text" name="hora" required>
                                    </div>
                                    <div class="form-group  col-lg-12">
                                        <label>Efetuar pagamento? *</label>
                                        <div class="form-group">

                                            <label><input type="radio" name="statusPagamento" value="1" required>Sim</label>
                                            <label><input type="radio" name="statusPagamento" value="2" required>Não</label>

                                        </div>
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <button class="btn btn-success form-group" type="submit">Cadastrar</button>
                                        <button class="btn btn-danger form-group" type="reset">Limpar</button>
                                    </div>
                                </div>
                            </div>
                        </form>


                        <!-- Mudando essa area muda o conteudo do site -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



